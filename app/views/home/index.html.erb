<script src="http://d3js.org/d3.v2.js"></script>

<div ng-controller="PurchaseController">
  
  <h1>Got Data: {{success}}</h1>
  <p>Errors: {{error}}</p>
  <p>Pages Loaded: {{page}}</p>
  <p>Purchases: {{purchaseCount}}</p>

  <table border="1">
    <tr>
      <td></td>
      <th>Android</th>
      <th>iOS</th>
      <th>Total</th>
    </tr>
    <tr>
      <th>Yearly</th>
      <td>{{android_yearly}}</td>
      <td>{{ios_yearly}}</td>
      <td>{{android_yearly + ios_yearly}}</td>
    </tr>
    <tr>
      <th>Unlimited</th>
      <td>{{android_unlimited}}</td>
      <td>{{ios_unlimited}}</td>
      <td>{{android_unlimited + ios_unlimited}}</td>
    </tr>
    <tr>
      <th>Total</th>
      <td>{{android_yearly + android_unlimited}}</td>
      <td>{{ios_yearly + ios_unlimited}}</td>
      <td>{{ios_yearly + ios_unlimited + android_yearly + android_unlimited}}</td>
  </table>

  Grouped <input type="checkbox" ng-model="grouped">
  iOS Yearly <input type="checkbox" ng-model="iOSYearly">
  iOS Unlimited <input type="checkbox" ng-model="iOSUnlimited">
  Android Yearly <input type="checkbox" ng-model="androidYearly">
  Android Unlimited <input type="checkbox" ng-model="androidUnlimited">

  <br>
  <br>

  <ml-year-graph val="data" grouped="grouped"></ml-year-graph>
</div>